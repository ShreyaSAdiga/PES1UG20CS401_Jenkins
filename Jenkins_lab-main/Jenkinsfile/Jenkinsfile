pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'g++ -o hello Jenkins_lab-main/Jenkinsfile/abc1.cpp'
                echo 'Build stage successful'
            }
        }

        stage('Test') {
            steps {
                sh './hello'
                echo 'Test stage successful'
                hello123
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploy stage successful'
            }
        }
    }

    post {
        always {
            script {
                if (currentBuild.result == 'FAILURE') {
                    echo 'Pipeline failed'
                }
            }
        }
    }
}
